{% extends 'home/squelette.html.twig' %}

{% block title %}Mes offres{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ job.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
            <tr>
                <th>DatePublished</th>
                <td>{{ job.datePublished ? job.datePublished|date('Y-m-d H:i:s') : '' }}
                </td>
            </tr>
            <tr>
                <th>JobStartDate</th>
                <td>{{ job.jobStartDate ? job.jobStartDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('job_crud_index') }}"><i class="fas fa-arrow-left"></i>Retour</a>

    <a href="{{ path('job_crud_edit', {'id': job.id}) }}"><i class="fas fa-pencil-alt"></i></a>

    {{ include('job_crud/_delete_form.html.twig') }}
{% endblock %}
